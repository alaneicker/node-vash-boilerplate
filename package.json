{
  "name": "Node-vash-boilerplate",
  "version": "1.0.0",
  "description": "A Simple Node.js/Vash Project Boilerplate",
  "main": "./src/views/index.vash",
  "scripts": {
    "browserSync": "browser-sync start --proxy localhost:4000 --files src/**/*",
