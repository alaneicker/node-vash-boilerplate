    "url": "https://github.com/alaneicker/node-vash-boilerplate/issues"
  },
  "homepage": "https://github.com/alaneicker/node-vash-boilerplate#readme",
  "dependencies": {
    "body-parser": "^1.18.1",
    "express": "^4.15.4",
    "path": "^0.12.7",
    "vash": "^0.12.2"
  },
  "devDependencies": {
    "node-sass": "^4.5.3"
  }
}
